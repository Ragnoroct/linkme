{
    "name": "linkme",
    "displayName": "linkme",
    "description": "",
    "icon": "icon.png",
    "version": "0.2.0",
    "publisher": "ragnoroct",
    "repository": {
        "type": "git",
        "url": "https://github.com/Ragnoroct/linkme.git"
    },
    "author": {
        "name": "Will Bender",
        "email": "willpbender@gmail.com"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "title": "Linkme configuration",
                "properties": {
                    "linkme.fieldsOnly": {
                        "type": "boolean",
                        "description": "Match only fields seperated by spaces. (warning: Set to false for advanced regex usage only)",
                        "default": true
                    },
                    "linkme.rules": {
                        "type": "array",
                        "description": "List of pattern and url combinations.\nEx. [ { \"pattern\": \"DEV-(\\d{4})\", \"url\": \"https://mysite.com/path/\\\\1\" ]",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "pattern",
                                "url"
                            ],
                            "properties": {
                                "pattern": {
                                    "type": "string",
                                    "description": "The pattern to match the text and capture groups."
                                },
                                "url": {
                                    "type": "string",
                                    "description": "The url that uses the captured groups to form a url."
                                }
                            }
                        }
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "shippableTest": "node ./node_modules/vscode/bin/test",
        "package": "vsce package && 7z a linkme.zip linkme*.vsix && tar -zcvf linkme.tar.gz linkme*.vsix"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "@types/sinon": "^4.3.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "hoek": "^5.0.3",
        "sinon": "^4.4.2",
        "typemoq": "^2.1.0"
    }
}