{
    "name": "linkme",
    "displayName": "linkme",
    "description": "",
    "icon": "icon.png",
    "version": "0.0.1",
    "publisher": "ragnoroct",
    "repository": {
        "type": "git",
        "url": "https://github.com/Ragnoroct/linkme.git"
    },
    "author": {
        "name": "Will Bender",
        "email": "willpbender@gmail.com"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "title": "Linkme configuration",
                "properties": {
                    "linkme.fieldsOnly": {
                        "type": "boolean",
                        "description": "Match fields seperated by spaces.",
                        "default": true
                    },
                    "linkme.rules": {
                        "type": "array",
                        "description": "List of regex and url combinations.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "match": { 
                                    "type": "string",
                                    "description": "The regex to match the text and capture groups."
                                },
                                "result": { 
                                    "type": "string",
                                    "description": "The url that uses the captured groups to form a url."
                                }
                            }
                        }
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
